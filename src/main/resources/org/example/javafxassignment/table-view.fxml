<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<GridPane alignment="CENTER" hgap="10.0" vgap="10.0"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="org.example.javafxassignment.controller.ArticleController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label style="-fx-font: NORMAL 20 Tahoma;" text="List Student"
           GridPane.columnIndex="0" GridPane.rowIndex="0">
    </Label>
    <TableView fx:id="tableView" GridPane.columnIndex="0"
               GridPane.rowIndex="1">
        <columns>
            <TableColumn text="id" prefWidth="100">
                <cellValueFactory><PropertyValueFactory property="id" /></cellValueFactory>
            </TableColumn>
            <TableColumn text="title" prefWidth="200">
                <cellValueFactory><PropertyValueFactory property="title" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="describes" prefWidth="200">
                <cellValueFactory><PropertyValueFactory property="des" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="content" prefWidth="200">
                <cellValueFactory><PropertyValueFactory property="container" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</GridPane>
